function! <SID>OpenOutsideNERDTree(bufNum)
	if expand('%') =~ 'NERD_tree_'
		:wincmd l
	endif
	:execute "normal \<Plug>BufTabLine.Go(".a:bufNum.")"
endfunction
let g:buftabline_numbers = 2
let g:buftabline_indicators = 1
